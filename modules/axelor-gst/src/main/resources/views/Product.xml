<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">


	<cards name="product-card" title="Product" model="com.axelor.gst.db.Product"
		orderBy="name">
		<field name="name" />
		<field name="code" />
		<field name="hsbn" />
		<field name="productCategory" />
		<field name="salePrice" />
		<field name="costPrice" />
		<field name="image" />
		<field name="gstRate" />

		<template><![CDATA[
       <div class="span8 card-image">
        <img ng-src="{{$image('image', 'content')}}">
        <strong>Name:{{name}}</strong>
        <strong>HSBN: {{hsbn}}</strong>
        <strong>Category : {{productCategory}}</strong>
        <strong>Sale Price : {{salePrice}}</strong>
        <strong>Cost Price : {{costPrice}}</strong>
        <strong>GST Rate : {{gstRate}}</strong>
      </div>
    
      
  ]]></template>
	</cards>

	<grid name="product-grid" title="Product" model="com.axelor.gst.db.Product">

		<field name="name" />
		<field name="code" />
		<field name="hsbn" />
		<field name="productCategory" />
		<field name="salePrice" />
		<field name="costPrice" />
		<field name="image" />
		<field name="gstRate" />
	</grid>

	<form name="product-form" title="Product" model="com.axelor.gst.db.Product"
		css="panel-red">
		<toolbar>
		     <button name="btnPrintProduct" icon="fa-print" title="Generate PDF"
				onClick="action-report-product" showIf="id" />
		</toolbar>

		<panel title="Product Details">

			<field name="name" required="true" />
			<field name="code" required="true" />
			<field name="hsbn" />
			<field name="productCategory" onChange="com.axelor.gst.controllers.ProductController:setGST"/>
			<field name="salePrice" />
			<field name="costPrice" />
			<field name="image" widget="image" />
			<field name="gstRate" />
		</panel>

	</form>
	
	
	<action-report name="action-report-product" design="product.rptdesign"
		output="product" format="pdf">
		<param name="productId" expr="eval: id" />
	</action-report>

</object-views>